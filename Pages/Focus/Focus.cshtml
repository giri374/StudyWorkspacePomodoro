@page
@model FocusModel
@{
    ViewData["Title"] = "Trang Focus";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/globals.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <!-- Trang chủ Pomodoro -->
    <div class="container-fluid p-0 d-flex flex-column min-vh-100">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #fcefdc; height: 70px;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" href="#">
                    <img src="~/img/POMODORO.png" alt="Logo" class="me-2 logo-img" />
                </a>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-page="/Focus/Focus">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" href="#">MANAGEMENT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-page="/MainScreen/Index">WORKSPACE</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Banner -->
        <div class="position-relative text-center flex-grow-1"
            style="background-image: url('/img/bannerHomepage.jpg'); background-size: cover; background-position: center; height: 450px;">
            <div class="position-absolute top-50 start-50 translate-middle w-100">

            </div>
        </div>
    </div>

    <div class="add">
        <div class="group-wrapper">
            <div class="group-3">
                <div class="overlap-2">
                    <p class="p">25 : 00 : 00</p>
                    <div class="text-wrapper-4">HR</div>
                    <div class="text-wrapper-5">MIN</div>
                    <div class="text-wrapper-6">SEC</div>
                </div>
                <div class="component">
                    <div class="overlap-group-wrapper">
                        <div class="div-wrapper">
                            <div class="text-wrapper-7">FOCUS</div>
                        </div>
                    </div>
                    <div class="text-wrapper-8">SHORT BREAK</div>
                    <div class="text-wrapper-9">LONG BREAK</div>
                </div>
                <div class="NHP-STAR">
                    <div class="group-4">
                        <div class="overlap-group-2">
                            <div class="NN-START"></div>
                            <div class="text-wrapper-10">START</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="next-nn">
            <div class="overlap-3">
                <img class="NH-NN-2" src="~/img/NH-n-n-2.png" />
                <div class="text-wrapper-11">Lofi 3</div>
            </div>
            <img class="vector" src="~/img/vector.svg" />
            <img class="vector-2" src="~/img/image.svg" />
        </div>
        <div class="nhp-nhy-group">
            <div class="TN-BH-NGH-s">
                <img class="image" src="~/img/image.png" />
                <div class="l-c-tr-i">Wandering at Midnight</div>
                <div class="s-n-t-ng-MTP">Star Hopper</div>
            </div>
            <div class="nhp-nhy">
                <div class="rectangle-2"></div>
                <div class="rectangle-3"></div>
                <div class="rectangle-4"></div>
            </div>
            <img class="vector-3" src="~/img/vector-3.svg" />
            <img class="vector-4" src="~/img/vector-2.svg" />
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-2 mt-auto" style="background-color: #fcefdc;">
        <small class="text-muted">Đồ án môn Công nghệ Web - Nhóm 4 - 22CDP</small>
    </footer>
    </div>

</body>

</html>

