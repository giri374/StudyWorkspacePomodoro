@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Trang chủ Pomodoro -->
<div class="container-fluid p-0 d-flex flex-column min-vh-100">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #fcefdc; height: 70px;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="#">
                <img src="~/img/POMODORO.png" alt="Logo" class="me-2 logo-img" />
            </a>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="#">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" href="#">MANAGEMENT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" asp-area="" asp-page="/MainScreen/Index">WORKSPACE</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Banner -->
    <div class="position-relative text-center flex-grow-1"
         style="background-image: url('/img/bannerHomepage.jpg'); background-size: cover; background-position: center; height: 450px;">
        <div class="position-absolute top-50 start-50 translate-middle w-100">
            <h1 class="display-4 fw-bold animate__animated animate__bounceInDown" style="color: #226c2d;">WELCOME TO POMODORO!</h1>
            <p class="fs-5 fst-italic text-dark animate__animated animate__fadeInUp">Digital workspace that help you focus.</p>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-2 mt-auto" style="background-color: #fcefdc;">
        <small class="text-muted">Đồ án môn Công nghệ Web - Nhóm 4 - 22CDP</small>
    </footer>
</div>

<!-- Font + Animate CSS -->
<link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Custom CSS -->
<style>
    h1 {
        font-family: 'Fredoka One', cursive;
        text-shadow: 2px 2px 4px white;
    }

    .logo-img {
        max-height: 60px;
        height: auto;
        width: auto;
    }
</style>
