@page "{id:int}"
@model StudyPage.Pages.MusicManagement.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Music</h1>
<hr />

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<h3>Are you sure you want to delete this track?</h3>

@if (Model.MusicTrack != null)
{
<div>
    <h4>Track Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Song Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusicTrack.SongName)
        </dd>
        <dt class="col-sm-2">
            File Path
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusicTrack.MusicFile)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="MusicTrack.MusicID" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
}
else if(string.IsNullOrEmpty(Model.ErrorMessage))
{
     <div class="alert alert-warning">Track not found. It may have already been deleted.</div>
     <a asp-page="./Index" class="btn btn-primary">Back to List</a>
}