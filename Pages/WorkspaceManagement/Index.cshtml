@page
@model StudyPage.Pages.WorkspaceManagement.IndexModel
@{
    ViewData["Title"] = "Workspace Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Workspace Management</h2>
                <a href="/WorkspaceManagement/Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Workspace
                </a>
            </div>

            @if (Model.Workspaces.Count == 0)
            {
                <div class="alert alert-info text-center">
                    <h4>No Workspaces Found</h4>
                    <p>Start by creating your first workspace!</p>
                    <a href="/WorkspaceManagement/Create" class="btn btn-primary">Create Workspace</a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var workspace in Model.Workspaces)
                    {
                        <div class="col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(workspace.BackgroundImage))
                                {
                                    <img src="~/@workspace.BackgroundImage" class="card-img-top" alt="@workspace.WorkspaceName" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                }
                                
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@workspace.WorkspaceName</h5>
                                    <p class="card-text text-muted small">ID: @workspace.WorkspaceID</p>
                                    
                                    <div class="mt-auto">
                                        <div class="btn-group w-100" role="group">
                                            <a href="/WorkspaceManagement/Edit?id=@workspace.WorkspaceID" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a href="/WorkspaceManagement/Delete?id=@workspace.WorkspaceID" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
    }
    .btn-group .btn {
        flex: 1;
    }
</style>