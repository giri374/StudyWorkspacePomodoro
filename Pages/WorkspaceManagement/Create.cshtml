@page
@model StudyWorkspace.Pages.Workspaces.CreateModel
@{
    ViewData["Title"] = "Thêm không gian làm việc";
}

<h1>Thêm không gian làm việc</h1>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Workspace.Name" class="form-label">Tên không gian</label>
        <input asp-for="Workspace.Name" class ="form-control" />
        <span asp-validation-for="Workspace.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BackgroundImageFile" class="form-label">Ảnh nền</label>
        <input type="file" asp-for="BackgroundImageFile" class="form-control" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />