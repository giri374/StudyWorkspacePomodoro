@page
@model StudyPage.Pages.WorkspaceManagement.EditModel
@{
    ViewData["Title"] = "Edit Workspace";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-edit"></i> Edit Workspace
                    </h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.errorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @Model.errorMessage
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" name="WorkspaceID" value="@Model.workspace.WorkspaceID" />
                        <input type="hidden" name="OldBackgroundImage" value="@Model.workspace.BackgroundImage" />

                        <div class="mb-3">
                            <label for="WorkspaceName" class="form-label">
                                <i class="fas fa-tag"></i> Workspace Name
                            </label>
                            <input type="text" class="form-control" id="WorkspaceName" name="WorkspaceName" 
                                   value="@Model.workspace.WorkspaceName" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-image"></i> Current Background Image
                            </label>
                            @if (!string.IsNullOrEmpty(Model.workspace.BackgroundImage))
                            {
                                <div class="card mb-2" style="max-width: 300px;">
                                    <img src="~/@Model.workspace.BackgroundImage" class="card-img-top" 
                                         alt="Current Background" style="height: 200px; object-fit: cover;">
                                    <div class="card-body p-2">
                                        <small class="text-muted">Current: @System.IO.Path.GetFileName(Model.workspace.BackgroundImage)</small>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> No background image currently set.
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="BackgroundImage" class="form-label">
                                <i class="fas fa-upload"></i> New Background Image (Optional)
                            </label>
                            <input type="file" class="form-control" id="BackgroundImage" name="BackgroundImage" accept="image/*">
                            <div class="form-text">
                                Leave empty to keep current background image. Select a new image to replace it.
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="preview-container" id="imagePreview" style="display: none;">
                                <label class="form-label">New Image Preview:</label>
                                <div class="card" style="max-width: 300px;">
                                    <img id="previewImg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Preview">
                                    <div class="card-body p-2">
                                        <small class="text-muted" id="previewName"></small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Workspace
                            </button>
                            <a href="/WorkspaceManagement/Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <a href="/WorkspaceManagement/Delete?id=@Model.workspace.WorkspaceID" class="btn btn-outline-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('BackgroundImage').addEventListener('change', function(e) {
    const previewContainer = document.getElementById('imagePreview');
    const previewImg = document.getElementById('previewImg');
    const previewName = document.getElementById('previewName');
    
    if (e.target.files.length > 0) {
        const file = e.target.files[0];
        if (file.type.startsWith('image/')) {
            const reader = new FileReader();
            reader.onload = function(e) {
                previewImg.src = e.target.result;
                previewName.textContent = file.name;
                previewContainer.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    } else {
        previewContainer.style.display = 'none';
    }
});
</script>

<style>
    .preview-container .card {
        transition: transform 0.2s;
    }
    .preview-container .card:hover {
        transform: scale(1.05);
    }
</style>