@page
@model StudyPage.Pages.WorkspaceManagement.DeleteModel
@{
    ViewData["Title"] = "Delete Workspace";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Workspace
                    </h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                        </div>
                    }

                    @if (Model.Workspace != null)
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-warning"></i> Confirm Deletion</h5>
                            <p class="mb-0">Are you sure you want to delete this workspace? This action cannot be undone.</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h5>Workspace Details:</h5>
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>ID:</strong></td>
                                        <td>@Model.Workspace.WorkspaceID</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Name:</strong></td>
                                        <td>@Model.Workspace.WorkspaceName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Background:</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(Model.Workspace.BackgroundImage))
                                            {
                                                <span class="text-success">
                                                    <i class="fas fa-check"></i> @System.IO.Path.GetFileName(Model.Workspace.BackgroundImage)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">
                                                    <i class="fas fa-times"></i> No background image
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            
                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.Workspace.BackgroundImage))
                                {
                                    <h5>Background Preview:</h5>
                                    <div class="card">
                                        <img src="~/@Model.Workspace.BackgroundImage" class="card-img-top" 
                                             alt="@Model.Workspace.WorkspaceName" style="height: 200px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <small class="text-muted">This image will also be deleted</small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 200px;">
                                        <div class="text-center text-muted">
                                            <i class="fas fa-image fa-3x"></i>
                                            <p class="mt-2">No background image</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="/WorkspaceManagement/Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                                <a href="/WorkspaceManagement/Edit?id=@Model.Workspace.WorkspaceID" class="btn btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit Instead
                                </a>
                            </div>
                            
                            <form method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Are you absolutely sure you want to delete this workspace? This cannot be undone.')">
                                    <i class="fas fa-trash"></i> Yes, Delete Workspace
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle"></i> Workspace Not Found</h5>
                            <p>The workspace you're trying to delete could not be found.</p>
                            <a href="/WorkspaceManagement/Index" class="btn btn-primary">
                                <i class="fas fa-list"></i> Back to Workspace List
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-danger {
        border-color: #dc3545 !important;
    }
    
    .card img {
        transition: transform 0.2s;
    }
    
    .card:hover img {
        transform: scale(1.02);
    }
    
    .btn-danger:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
    }
</style>