@page
@model StudyWorkspace.Pages.Workspaces.EditModel
@{
    ViewData["Title"] = "Sửa không gian làm việc";
}

<h1>Sửa không gian làm việc</h1>

@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Workspace.WorkspaceID" />
    <div class="mb-3">
        <label asp-for="Workspace.Name" class="form-label">Tên không gian</label>
        <input asp-for="Workspace.Name" class="form-control" />
        <span asp-validation-for="Workspace.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BackgroundImageFile" class="form-label">Ảnh nền</label>
        <input type="file" asp-for="BackgroundImageFile" class="form-control" accept="image/*" />
        
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />