<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/main.css" />
</head>

<body class="page-container" style="background-image: url('@(ViewData["WorkspaceImage"] ?? "/img/BACKGROUND.png")'); background-size: cover; background-position: center; background-repeat: no-repeat;">    
<header class="header">
        <img src="~/img/POMODORO.png" alt="Logo" class="logo" />
        <nav class="nav">
            <a href="/">HOME</a>
            <a href="/Management/Index">MANAGEMENT</a>
            <a href="/MainScreen/MainScreen">WORKSPACE</a>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        © 2025 Pomodoro App
    </footer>
@RenderSection("Scripts", required: false)
</body>
</html>
